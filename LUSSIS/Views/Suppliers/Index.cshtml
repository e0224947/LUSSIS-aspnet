@model IEnumerable<LUSSIS.Models.Supplier>

@{
    ViewBag.Title = "List of Suppliers";
}

<h2>All Suppliers</h2>
<hr />
<p>
    @Html.ActionLink("Add New Supplier", "Create", null, new{@class="btn btn-success btn-sm"})
</p>
<table class="table table-striped table-hover tablesorter" id="myTable">
    <thead>
    <tr class="table-active">
        <th>
            Supplier Name
        </th>
        <th>
            Contact Name
        </th>
        <th>
            Phone No
        </th>
        <th>
            Fax No
        </th>
        <th>
            Manage
        </th>
    </tr>
        </thead><tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelephoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaxNum)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SupplierId }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Details", "Details", new { id = item.SupplierId }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.SupplierId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</tbody>
</table>

@section scripts {

    <script src="~/Scripts/jquery.tablesorter.min.js"></script>
    <link href="~/Content/sorter/style.css" rel="stylesheet" type="text/css" />


    <script>
        $(document).ready(function () {
                $("#myTable").tablesorter({
                    headers: {
                        2: {
                            sorter:false
                        },
                        3: {
                            sorter:false
                        },
                        4: {
                            sorter: false
                        }
                    }
                });
            }
        );
    </script>
}


