@model IEnumerable<LUSSIS.Models.DisbursementDetail>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Disbursement Details - @Model.First().Disbursement.Department.DeptName</h2>
<hr/>
<table class="table table-striped table-hover tablesorter" id="myTable">
    <thead>
    <tr class="table-active">
        <th>
            @Html.DisplayNameFor(model => model.Stationery.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestedQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActualQty)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.HiddenFor(modelItem => item.Disbursement.DeptCode)
                @Html.DisplayFor(modelItem => item.Stationery.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestedQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualQty)
            </td>
        </tr>
    }
    </tbody>
</table>
@Html.ActionLink("Back to List", "History", null, new {@class = "btn btn-secondary"})

@section scripts {
    <script src="~/Scripts/jquery.tablesorter.min.js"></script>
    <link href="~/Content/sorter/style.css" rel="stylesheet" type="text/css"/>

    <script>
        $(document).ready(function() {
                $("#myTable").tablesorter();
            }
        );
    </script>
}


